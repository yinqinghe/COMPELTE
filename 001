using System;

using System.Collections.Generic;

using System.Linq;

using System.Text;

using System.Threading.Tasks;



namespace ConsoleApp2

{

    class Program

    {

        static void Main(string[] args)

        {

            int a, b, c;

            Console.WriteLine("操作选择：1:加法   2:减法   3:乘法    4:除法");

            Console.WriteLine("请输入a,b  选择操作c");

            try

            {

                a = int.Parse(Console.ReadLine());

                b = int.Parse(Console.ReadLine());

                c = int.Parse(Console.ReadLine());

                JiSuanQi GD = new JiSuanQi();

                switch (c)

                {

                    case 1:

                        GD.JiaFa(a, b);

                        break;

                    case 2:

                        GD.JianFa(a, b);

                        break;

                    case 3:

                        GD.ChengFa(a, b);

                        break;

                    case 4:

                        GD.ChuFa(a, b);

                        break;

                }

            }

            catch (DivideByZeroException)

            {

                Console.WriteLine("ERROR：b is zero");

            }



        }

    }

    class JiSuanQi

    {

        public void JiaFa(int a, int b)

        {

            Console.WriteLine("两数之和为{0}", a + b);

        }

        public void JianFa(int a, int b)

        {

            Console.WriteLine("两数之差为{0}", a - b);

        }

        public void ChengFa(int a, int b)

        {

            Console.WriteLine("两数之积为{0}", a * b);

        }

        public void ChuFa(int a, int b)

        {

            Console.WriteLine("两数之商为{0}", a / b);

        }

    }

}
